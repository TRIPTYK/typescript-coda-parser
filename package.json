{
  "name": "@gilles-bertrand/node-boilerplate.git",
  "version": "0.0.0-alpha.0",
  "main": "dist/index.js",
  "scripts": {
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "compile": "tsc",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint:duplication": "jscpd --pattern \"src/**/*.ts\" --exitCode 1",
    "start:dev": "NODE_ENV=development nodemon --watch './src/**/*.ts' --exec 'node --loader ts-node/esm' ./src/application.bootstrap.ts",
    "start:test": "NODE_ENV=test INTERACTIVE_TESTS=true nodemon --watch './src/**/*.ts' --exec 'node --loader ts-node/esm' ./src/application.bootstrap.ts",
    "start:test:ci": "NODE_ENV=test  INTERACTIVE_TESTS=true node --loader 'ts-node/esm' ./src/application.bootstrap.ts",
    "start:production": "NODE_ENV=production node ./dist/src/application.bootstrap.js"
  },
  "type": "module",
  "author": "Gilles BERTRAND",
  "license": "MIT",
  "dependencies": {
    "reflect-metadata": "~0.1.13"
  },
  "homepage": "https://github.com/gilles-bertrand/node-boilerplate#readme",
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@rollup/plugin-node-resolve": "~15.0.1",
    "@rollup/plugin-typescript": "~9.0.2",
    "@types/jest": "~29.0.0",
    "@types/node": "~18.7.16",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "~5.36.2",
    "@typescript-eslint/parser": "~5.36.2",
    "eslint": "~8.23.0",
    "eslint-config-standard": "~17.0.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-jest": "~27.0.2",
    "eslint-plugin-n": "~15.2.4",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-promise": "~6.0.0",
    "eslint-plugin-unused-imports": "~2.0.0",
    "jest": "~29.0.2",
    "jscpd": "~3.4.5",
    "nodemon": "~2.0.19",
    "prettier-eslint": "~15.0.1",
    "rollup": "~3.2.5",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "ts-jest": "^29.0.3",
    "ts-node": "~10.9.1",
    "ts-node-dev": "~2.0.0",
    "tslib": "~2.4.1",
    "type-fest": "~2.19.0",
    "typescript": "~4.8.3"
    
  },
  "volta": {
    "node": "18.12.1"
  }
}
